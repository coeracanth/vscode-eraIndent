{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"outDir": "out",
		"lib": [
			"es2019"
		],
		"sourceMap": true,
		"rootDir": "src",
		/* enable all strict type-checking options */
		"strict": true,
		"exactOptionalPropertyTypes": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
